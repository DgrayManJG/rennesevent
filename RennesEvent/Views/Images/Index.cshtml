@model IEnumerable<BO.Image>

@{
    ViewBag.Title = "Index";
}

<div id="page" class="container">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDefault)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="image-item">
                    @Html.DisplayFor(modelItem => item.Nom)
                    <span class="tooltipimage"><img src="~/Content/images/evenements/@Html.DisplayFor(modelItem => item.Nom)" class="img-responsive" alt="" width="200" height="150"></span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDefault)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>